{% extends 'todo/base.html.twig' %}

{% block main %}
    <div class="content-container">
        {{ include('todo/twigBlocks/progression.html.twig') }}
        <section class="todos">
            <div class="todos-header">
                <h3 class="h3 headline">In progression</h3>
                <a href="./todo/#todo-popup" class="button add-todo"></a>
                <div class="description">Today</div>
            </div>
            <div class="todos-wrapper">
                <ul>
                    {% for todo in todos %}
                    <li>
                        <div class="header">
                            <div class="circle"></div>
                            <h3 class="h3 headline">{{ todo.title }}</h3>
                            <a href="{{ path('complete_todo', {'todo': todo.id}) }}" class="button-complete"></a>
                            <form action="./?action=getEditTodo" method="post">
                                <input type="hidden" name="id" value="">
                                <button class="button-edit"></button>
                            </form>
                            <a href="{{ path('delete_todo', {'todo': todo.id}) }}" class="button-delete"></a>
                        </div>
                        <div class="description">{{ todo.description }}</div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
{% endblock %}

{% block popup %}
    {{ include('todo/twigBlocks/todo-popup.html.twig') }}
{% endblock %}