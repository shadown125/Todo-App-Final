<div class="profile-container">
    <div class="left-side-wrapper">
        <img src="/Todo-App/public/src/pics/{{ app.user.profileImage }}" alt="profile image">
        <div class="current-level">{{ app.user.level }}</div>
    </div>
    <div class="profile-information">
        <div>{{ app.user.name }}</div>
        {% if(app.user.lastname) %}
            <div>{{ app.user.lastname }}</div>
        {% endif %}
    </div>
</div>