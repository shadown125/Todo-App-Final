{% extends 'todo/register/base.html.twig' %}

{% block main %}

    <h2 class="title h2">Register</h2>
    {{ form_start(form, {'attr': {'novalidate':'novalidate', 'class':'form todo-user-register'}}) }}
    <div class="name-wrapper">
        <div>
            <label for="todo_user_name" class="first-name">First name: <sup>*</sup></label>
            {% if form.name.vars.errors|length %}
                {{ form_widget(form.name, { 'attr': {'class': 'first-name is-invalid', 'placeholder': 'Your first name'} }) }}
            {% else %}
                {{ form_widget(form.name, { 'attr': {'class': 'input', 'placeholder': 'Your first name'} }) }}
            {% endif %}
            <div class="validation"></div>
            {{ form_errors(form.name) }}
        </div>
        <div>
            <label for="todo_user_last_name" class="last-name">Last name:</label>
            {{ form_widget(form.last_name, { 'attr': {'class': 'last-name', 'placeholder': 'Your last name'} }) }}
            {{ form_errors(form.last_name) }}
        </div>
    </div>
    <div>
        <label for="todo_user_email" class="email">E-Mail: <sup>*</sup></label>
        {% if form.email.vars.errors|length %}
            {{ form_widget(form.email, { 'attr': {'class': 'email is-invalid', 'placeholder': 'Your E-Mail'} }) }}
        {% else %}
            {{ form_widget(form.email, { 'attr': {'class': 'email', 'placeholder': 'Your E-Mail'} }) }}
        {% endif %}
        <div class="validation"></div>
        {{ form_errors(form.email) }}
    </div>
    <div>
        <label for="todo_user_password_first" class="password">Password: <sup>*</sup></label>
        {% if form.password.first.vars.errors|length %}
            {{ form_widget(form.password.first, { 'attr': {'class': 'password is-invalid', 'placeholder': 'Your password'} }) }}
        {% else %}
            {{ form_widget(form.password.first, { 'attr': {'class': 'password', 'placeholder': 'Your password'} }) }}
        {% endif %}
        <div class="validation"></div>
        {{ form_errors(form.password.first) }}
    </div>
    <div>
        <label for="confirm-password" class="confirm-password">Confirm password: <sup>*</sup></label>
        {{ form_widget(form.password.second, { 'attr': {'class': 'confirm-password', 'placeholder': 'Confirm your password'} }) }}
        {{ form_errors(form.password.second) }}
        <div class="validation"></div>
    </div>
    <div class="submitting-container">
        <button class="register-button" type="submit">Register</button>
    </div>
    {{ form_end(form) }}
    <a href="{{ path('todo_login') }}" class="button-back">Back</a>
{% endblock %}