{% extends 'todo/login/base.html.twig' %}

{% block main %}

<h2 class="title h2">Login or <a href="{{ path('todo_register') }}" class="register">Register</a></h2>
<form action="{{ path('todo_login') }}" method="post" class="form">
    <div>
        <label for="login" class="login">Login:</label>
        <input type="text" id="login" class="login {% if error %}{{ "is-invalid" }}{% endif %}"
               value="" name="_email" placeholder="E-Mail">
        {% if error %}
            <span class="invalid-feedback">{{ "E-Mail or password are wrong. Please check it and try again" }}</span>
        {% endif %}
    </div>
    <div>
        <label for="password" class="password">Password:</label>
        <input type="password" id="password" class="password {% if error %}{{ "is-invalid" }}{% endif %}"
               value="" name="_password" placeholder="Password">
    </div>
    <div class="submitting-container">
        <a href="#" class="forgotten-password">Forgotten Password?</a>
        <a href="{{ path('todo_register') }}" class="button button-register">Register</a>
        <button class="button" type="submit">Login</button>
    </div>
    <input type="hidden" name="_csrf_token" value="{{  csrf_token('authenticate') }}">
</form>

{% endblock %}